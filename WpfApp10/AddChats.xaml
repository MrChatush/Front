<Window x:Class="WpfApp10.AddChats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="Добавить чат" 
        Height="300" 
        Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- ... ваши стили ... -->
    </Window.Resources>

    <Border CornerRadius="10"
        Background="{DynamicResource ControlBackgroundBrush}"
        BorderBrush="Black"
        BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="Black" Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="10 10 0 0">
                <TextBlock Text="Добавить чат"
                           Foreground="{DynamicResource TextForegroundBrush}"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

            <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center" >
                <!-- Имя пользователя -->
                <TextBlock Text="Имя пользователя"
                           Foreground="{DynamicResource TextForegroundBrush}"
                           Margin="0,0,0,2"
                           FontSize="13"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Foreground="{DynamicResource TextForegroundBrush}" 
                         Margin="0 0 0 8"
                         FontSize="14"
                         Background="#FF2D2D2D"/>

                <!-- Название чата -->
                <TextBlock Text="Название чата"
                           Foreground="{DynamicResource TextForegroundBrush}"
                           Margin="0,0,0,2"
                           FontSize="13"/>
                <TextBox Text="{Binding ChatTitle, UpdateSourceTrigger=PropertyChanged}" 
                         Foreground="{DynamicResource TextForegroundBrush}" 
                         Margin="0 0 0 8"
                         FontSize="14"
                         Background="#FF2D2D2D"/>
            </StackPanel>

            <Border Grid.Row="2" Background="{DynamicResource ControlBackgroundBrush}" CornerRadius="0 0 10 10" Padding="5">
                <Button Content="Добавить"
                        Foreground="{DynamicResource TextForegroundBrush}" 
                        Command="{Binding AddChatsCommand}"
                        Background="#FF1E6DD9"
                        FontWeight="Bold"/>
            </Border>

            <Button Width="32" Height="32"
                Command="{Binding CloseCommand}"
                VerticalAlignment="Top"
                Background="{DynamicResource WindowBackgroundBrush}"
                BorderThickness="0"
                Cursor="Hand"
                Margin="304,2,10,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="x" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"  Foreground="{DynamicResource TextForegroundBrush}"/>
            </Button>
        </Grid>
    </Border>
</Window>
